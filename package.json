{
  "name": "btmg-fourthspace",
  "version": "0.1.0",
  "description": "Bidirectional Temporal Memory Graph â€” sync between Neo4j knowledge graphs and documentation files with schema enforcement, bitemporal versioning, and AI-agent tooling.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./mcp": {
      "types": "./dist/mcp/index.d.ts",
      "import": "./dist/mcp/index.js",
      "require": "./dist/mcp/index.cjs"
    }
  },
  "bin": {
    "btmg": "./dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest",
    "lint": "eslint src",
    "serve": "node dist/cli/index.js serve",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "neo4j",
    "knowledge-graph",
    "temporal",
    "bitemporal",
    "mcp",
    "model-context-protocol",
    "documentation",
    "sync",
    "mdx",
    "markdown",
    "schema",
    "audit"
  ],
  "author": "Seb <saboncu@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thefounder-seb/btmg.git"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "fast-deep-equal": "^3.1.3",
    "glob": "^11.0.1",
    "gray-matter": "^4.0.3",
    "neo4j-driver": "^5.28.1",
    "object-hash": "^3.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "@types/object-hash": "^3.0.6",
    "eslint": "^9.21.0",
    "testcontainers": "^10.18.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.7"
  }
}
